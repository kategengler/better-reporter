<style>
  body {
    padding: 0;
    margin: 0;
    font-family: Helvetica, sans-serif;
    box-sizing: border-box;
    color: #444;
    font-size: 1rem;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  ol {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  *, *::after, *::before {
    box-sizing: inherit;
  }

  .reporter {
    width: 50%;
    position: absolute;
    height: calc(100% - 2rem);
    border: 0;
    border-right: 3px solid gray;
    left: 0;
    padding: 0;
  }

  .reporter h2, .reporter h4 {
    line-height: 1.5;
  }

  iframe {
    width: 50%;
    position: absolute;
    height: calc(100% - 2rem);
    border: 0;
    left: 50%;
  }


  .progress {
    width: 100%;
    height: 2rem;
    color: white;
    font-weight: bold;
  }
  .progress-wrap {
    background: #ddd;
    margin: 0;
    overflow: hidden;
    position: relative;
  }

  .progress-wrap .progress-bar {
    background: #16b864;
    left: 0;
    position: absolute;
    top: 0;
    padding: .5rem;
  }

  .progress-wrap .progress-bar.failed {
    background: #ff2a00;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.25;
    margin: 0;
  }

  h2 {
    font-size: 1.75rem;
  }

  h4 {
    font-size: 1.25rem;
  }
  h4.progress-status {
    font-size: 1rem;
    white-space: nowrap;
  }

  .sliding-panel-button {
    width: 2em;
    height: 2em;
    border: 1px solid #2F7498;
    border-radius: 2rem;
    line-height: 1.6rem;
    text-align: center;
    margin: .5rem;
    float: left;
  }

  input.filter-tests {
    width: 70%;
    margin: .5rem;
    font-size: 1.5rem;
    border: 0;
    border-radius: 0;
    border-bottom: 1px solid #ccc;
    box-shadow: none;
    padding: 0.3rem;
    color: #ddd;
  }

  input:focus.filter-tests {
    outline: none;
  }

  .results {
    padding: 2rem;
  }

  .results h4, .results h2 {
    font-weight: lighter;
  }

  .results-tests {
    padding-top: .5rem;
    padding-bottom: .5rem;
    padding-left: 1rem;
  }

  .results-assertions {
    list-style-type: circle;
    padding-top: .5rem;
    padding-bottom: .5rem;
    padding-left: 2rem;
  }

  a {
    text-decoration: none;
  }
  .arrow {
    color: #ccc;
    margin-right: .25rem;
  }

  .expanded.arrow {
    display: inline-block;
    transform: rotate(90deg);
  }

  .module .test-count, .test .assertion-count {
    display: inline-block;
    vertical-align: middle;
  }

  .module .test-count {
    font-size: 1rem;
  }

  .test .assertion-count {
    font-size: .75rem;
  }

  .no-app .reporter {
    width: 100%;
    border: 0;
    height: calc(100% - 2rem);
  }

  .top-bottom .reporter {
    width: 100%;
    height: calc(50% - 1rem);
    border-right: 0;
    border-bottom: 3px solid gray;
    overflow: auto;
  }

  .top-bottom iframe {
    width: 100%;
    height: calc(50% - 1rem);
    top: calc(50% + 1rem);
    left: 0;
  }

  .not-run {
    color: lightgray;
  }

  .reporter .assertion.failed .message,
  .reporter .module.failed .module-title,
  .reporter .module.running.failed .module-title,
  .reporter .test.failed .test-title,
  .reporter .test.running.failed .test-title {
    color: #ff2a00;
  }

  .reporter .module.running .arrow-module,
  .reporter .module.running .module-title,
  .reporter .test.running .arrow-test,
  .reporter .test.running .test-title {
    color: black;
  }

  .reporter .assertion.failed .message {
    font-weight: bold;
  }

  .failed-assertion-results {
    background-color: #EFEFEF;
    color: black;
    padding: 1em;
    margin: .5em;
    border-left: 0.5em solid #ff2a00;
  }

  .failed-assertion-results label {
    font-weight: bold;
    color: #777;
  }

  .failed-assertion-results pre {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  pre {
    white-space: pre-wrap;
  }

  .currently-running-test {
    font-style: italic;
    font-weight: normal;
  }
</style>
{{test-reporter test=test}}