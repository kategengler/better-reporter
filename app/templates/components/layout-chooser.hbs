<style>
  .layout-options {
    background-color: #444;
    position: absolute;
    border-bottom-left-radius: 2px;
    border-bottom-right-radius: 2px;
    right: 0;
    top: 0;
    z-index: 1000;
    display: none;
  }
  .layout-option {
    width: 24px;
    height: 24px;
    border: 2px solid #ccc;
    background-color:white;
    border-radius: 2px;
    margin: 1rem;
    display: block;
  }

  .layout-option .app {
    background-color: #7e7e7e;
  }

  .layout-option.left-right div {
    height: 100%;
    width: 10px;
    float: left;
  }

  .layout-option:focus ~ .layout-options {
    display: block;
  }

  .layout-options:hover {
    display:block;
  }
  .layout-option.top-bottom div {
    height: 10px;
    width: 100%;
  }

  .current-layout {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1000;
  }

  .current-layout.layout-option {
    margin: 0.25rem;
  }

  .layout-option.no-app div {
    display: none;
  }
</style>
<a href="#" class="current-layout layout-option {{currentLayout}}">
  <div></div>
  <div class="app"></div>
</a>
<div class="layout-options">
  <a href="#" {{action "select" "no-app"}} class="layout-option no-app">
    <div></div>
    <div class="app"></div>
  </a>
  <a href="#" {{action "select" "left-right"}} class="layout-option left-right">
    <div></div>
    <div class="app"></div>
  </a>
  <a href="#" {{action "select" "top-bottom"}} class="layout-option top-bottom">
    <div></div>
    <div class="app"></div>
  </a>
</div>