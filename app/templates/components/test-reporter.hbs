{{progress-indicator class="progress-wrap progress"
  passed=passed
  failed=failed
  total=total
  time=elapsed
}}

<div class="reporter">
  <input type="text" class="filter-tests" placeholder="Filter tests">
  <ul class="results">
    {{#each modules as |module|}}
      {{module-results module=module class="module"}}
    {{/each}}
  </ul>
</div>

{{layout-chooser currentLayout=currentLayout selectCurrentLayout=(action 'selectCurrentLayout')}}

<iframe src="http://localhost:4201/tests"></iframe>


