{{progress-indicator class="progress-wrap progress"
  passed=passed
  failed=failed
  total=total
  time=elapsed
  running=isRunning
}}

<div class="reporter">
  <section>
    <input type="text" class="filter-tests" placeholder="Filter tests">
  </section>
  <section class="results">
    {{#if currentTest}}
      <small>Running:</small>
      <h5 class="currently-running-test">{{currentTest.moduleName}} - {{currentTest.title}}</h5>
    {{/if}}
    <ol>
      {{#each failedModules as |mod|}}
        {{module-results mod=mod}}
      {{/each}}
      {{#each passedOrNotRunModules as |mod|}}
        {{module-results mod=mod}}
      {{/each}}
    </ol>
  </section>
</div>

{{layout-chooser currentLayout=currentLayout selectCurrentLayout=(action 'selectCurrentLayout')}}

<iframe class="tests-window" src="http://localhost:4200/tests"></iframe>